@using PagedList.Mvc;
@model PagedList.IPagedList<WatchStore.Models.MProduct>
@{
    ViewBag.Title = ViewBag.CatName;
    Layout = "~/Views/Shared/_LayoutSite.cshtml";
}
<section class="main-content-section">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <!-- BSTORE-BREADCRUMB START -->
                <div class="bstore-breadcrumb">
                    <a href="~/">Trang chủ</a>
                    <span><i class="fa fa-caret-right"></i></span>
                    <span>@ViewBag.CatName</span>
                </div>
                <!-- BSTORE-BREADCRUMB END -->
            </div>
        </div>
        <div class="row">
            <div class="col-lg-3 col-md-3 col-sm-3 col-xs-12">

                <div class="left-category-menu">
                    <div class="left-product-cat">
                        <div class="category-heading">
                            <h2>Đồng hồ Perpetual</h2>
                        </div>
                        <div class="category-menu-list">
                            @Html.Action("Category", "Module")
                        </div>
                    </div>
                </div>

                <div class="left-category-menu">
                    <div class="left-product-cat">
                        <div class="category-heading">
                            <h2>Đồng hồ nam</h2>
                        </div>
                        <div class="category-menu-list">
                            @Html.Action("CategoryChild", "Module", new { id = 1 })
                        </div>
                    </div>
                </div>

                <div class="left-category-menu">
                    <div class="left-product-cat">
                        <div class="category-heading">
                            <h2>Đồng hồ nữ</h2>
                        </div>
                        <div class="category-menu-list">
                            @Html.Action("CategoryChild", "Module", new { id = 2 })
                        </div>
                    </div>
                </div>

                 <div class="left-category-menu">
                    <div class="left-product-cat">
                        <div class="category-heading">
                            <h2>Theo khoảng giá</h2>
                        </div>
                        <div class="category-menu-list">
                            <ul>
                                <li>
                                    <a href="~/Dưới 1 triệu"><span class="cat-thumb hidden-md hidden-sm hidden-xs"></span>Dưới 1 triệu<i class="fa fa-angle-right"></i></a>
                                </li>
                                <li>
                                    <a href="~/Từ 1 - 2 triệu"><span class="cat-thumb hidden-md hidden-sm hidden-xs"></span>Từ 1 - 2 triệu<i class="fa fa-angle-right"></i></a>
                                </li>
                                <li>
                                    <a href="~/Từ 2 - 3 triệu"><span class="cat-thumb hidden-md hidden-sm hidden-xs"></span>Từ 2 - 3 triệu<i class="fa fa-angle-right"></i></a>
                                </li>
                                <li>
                                    <a href="~/Từ 3 triệu"><span class="cat-thumb hidden-md hidden-sm hidden-xs"></span>Từ 3 triệu<i class="fa fa-angle-right"></i></a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>

                <div class="left-category-menu">
                    <div class="left-product-cat">
                        <div class="category-heading">
                            <h2>Sản phẩm vừa xem</h2>
                        </div>
                        <div class="category-menu-list">
                            @Html.Action("RecentlyViewedProducts", "Module")
                        </div>
                    </div>
                </div>

            </div>
            <div class="col-lg-9 col-md-9 col-sm-9 col-xs-12">
                <div class="all-gategory-product">
                    <div class="row">
                        <ul class="gategory-product">
                            @foreach (var item in Model)
                            {
                                <li class="gategory-product-list col-lg-3 col-md-4 col-sm-6 col-xs-12">
                                    <div class="single-product-item">
                                        <div class="product-image">
                                            <a href="~/@item.Slug"><img src="~/Public/library/product/@item.Image" alt="@item.Name" /></a>
                                            @if (item.Discount != 0)
                                            {
                                        <a href="#" class="new-mark-box">new</a> 
                                            }
                                             else
                                               {
                                                  @*<a href="#" class="new-mark-box">new</a>*@
                                                }
                                            <div class="overlay-content">
                                                <ul>
                                                    
                                                    <li><a href="@item.Slug" title="Xem chi tiết"><i class="fa fa-shopping-cart"></i></a></li>
                                                    <li><a href="#"><i class="fa fa-retweet"></i></a></li>
                                                    <li><a href="#"><i class="fa fa-heart-o"></i></a></li>
                                                </ul>
                                            </div>
                                        </div>
                                        <div class="product-info">
                                            <div class="customar-comments-box">

                                                @*<div class="review-box">
                <span>1 Review(s)</span>
            </div>*@
                                            </div>
                                            <a href="~/@item.Slug">@item.Name</a>

                                            <div class="price-box">
                                                @if (item.Discount == 1)
                                                {
                                        <span class="price">@String.Format("{0:0,0₫}", item.ProPrice)</span>
                                                            <del><span class="price" style="color:red">@String.Format("{0:0,0₫}", item.Price)</span></del> }
                                                                            else
                                                                            {
                                                            <span class="price" style="color:red">@String.Format("{0:0,0₫}", item.Price)</span>}


                                            </div>
                                            <div>
                                                @for (int i = 1; i <= 5; i++)
                                                {
                                                    if (i <= item.ProRate)
                                                    {
                                                        <span class="fa fa-star checked"></span>
                                                    }
                                                    else
                                                    {
                                                        <span class="fa fa-star"></span>
                                                    }
                                                }
                                            </div>
                                        </div>
                                    </div>
                                </li>
                            }
                        </ul>
                    </div>
                </div>
                <div class="product-shooting-result product-shooting-result-border">

                    <div class="showing-item">
                        <span>Showing 1 - 12 of @ViewBag.Sl</span>
                    </div>
                    <div class="showing-next-prev">
                        @Html.PagedListPager(Model, page => Url.Action("Index", "Site", new { slug = ViewBag.Slug, page }))

                    </div>
                </div>
            </div>
        </div>
    </div>
</section>